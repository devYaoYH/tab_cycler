{
  "manifest_version": 3,
  "name": "Tab Cycler",
  "version": "1.0",
  "description": "Automatically cycles through tabs with configurable timing and auto-scroll functionality",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "commands": {
    "stop-scrolling": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Stop auto-scrolling"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Cycler Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}